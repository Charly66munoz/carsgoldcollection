{% extends 'layouts/layout_sidebar.html.twig' %}

{% block title %}Lista de Autos{% endblock %}

{% block main %}
    <div class="cars-list">
        <ul>
            {% for car in cars %}
                <li class="car-item">
                    <a style="color:black" href="{{ path('car_detail',{ id: car.id() }) }}">
                        {{ ('brand.' ~ car.brand.value)|trans({}, 'enum') }} |
                        {{ car.model }} |
                        {{ car.year }} |
                        {{ car.price }}â‚¬
                    </a>

                    <img src="{{ asset('img/carses/' ~ car.photo) }}" width="50" class="rounded shadow">
                </li>
                <hr>
            {% endfor %}
        </ul>
    </div>
{% endblock %}