{% extends 'base.html.twig' %}

{% block title %}Hello CarController!{% endblock %}

{% block body %}
<style>
    body{
        background-color: #cabeaeff;
        direction: flex;
        justify-content:center;
        align-items: center;
        text-align: center;
        font: 18px/1.5 sans-serif
    }
    .example-wrapper {display:flex; flex-direction: column; align-items: center; text-align:center; justify-content:center; margin: 1em auto; max-width: 800px; width: 95%; width: 60%}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .lista{
        display:flex;
        flex-direction: column;
        text-align:left;
        width: 40%;
        background-color: #f5f5f54d;
    }
    a {
    text-decoration: none;
    }
    ul {list-style-type: none;}
</style>
    <h1> Luxury Collector</h1>
<div class="example-wrapper">
    <div class="lista">
    <!--{{ app.request.locale }}-->
        <ul>
        
            {% for car in cars %}
                <li>
                    <a href="{{ path('car_detail',{ id: car.id.toRfc4122  }) }}">
                        {{ ('brand.' ~ car.brand.value|lower)|trans({}, 'enum') }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
    
</div>
{% endblock %}
