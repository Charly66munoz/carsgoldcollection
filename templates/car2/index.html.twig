{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
    <h1>Car index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Year</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.brand.value }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.description }}</td>
                <td>{{ car.photo }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.year }}</td>
                <td>{{ car.id }}</td>
                <td>
                    <a href="{{ path('app_car2_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('app_car2_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_car2_new') }}">Create new</a>
{% endblock %}
